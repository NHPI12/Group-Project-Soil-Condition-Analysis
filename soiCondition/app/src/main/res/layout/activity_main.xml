<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    tools:context=".MainActivity"
    android:background="@color/leaf">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        style="@style/ScreenBackground">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="top">
        <androidx.cardview.widget.CardView
            android:id="@+id/selectedPlantsCardView"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            android:visibility="gone"
            style="@style/CardBackground">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/selectedPlantsRecyclerView"
                    android:layout_width="0dp"
                    android:layout_margin="10dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/ArrowSelectedPlant"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constrainedHeight="true"
                    app:layout_constraintHeight_max="250dp"/>
                <ImageView
                    android:id="@+id/ArrowSelectedPlant"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/arrow_up"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="10dp"
                    tools:ignore="ContentDescription" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:id="@+id/PlantDetailsCardView1">

            <androidx.cardview.widget.CardView
                style="@style/CardBackground"
                android:layout_width="175dp"
                android:layout_height="126dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                tools:ignore="TextSizeCheck">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="60dp"
                        android:layout_marginBottom="90dp"
                        android:text="@string/watering"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:layout_width="30dp"
                        android:scaleType="centerCrop"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="90dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/watering_period"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/watering_value_main_activity"
                        android:textSize="25sp"
                        tools:ignore="RelativeOverlap,TextContrastCheck,TextSizeCheck" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:layout_width="175dp"
                android:layout_height="126dp"
                style="@style/CardBackground"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="65dp"
                        android:layout_marginBottom="90dp"
                        android:text="@string/sunlight"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:layout_width="35dp"
                        android:scaleType="centerCrop"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="85dp"
                        android:layout_marginEnd="15dp"
                        android:src="@drawable/ic_sun"
                        tools:ignore="ContentDescription" />

                    <TextView
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:id="@+id/sunlight_textView"
                        android:textSize="25sp"
                        tools:ignore="RelativeOverlap,TextContrastCheck,TextSizeCheck" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="20dp"
            android:id="@+id/PlantDetailsCardView2">

            <androidx.cardview.widget.CardView
                style="@style/CardBackground"
                android:layout_width="175dp"
                android:layout_height="126dp"
                android:layout_marginEnd="20dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                tools:ignore="TextSizeCheck">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextColor"
                        android:layout_width="90dp"
                        android:layout_height="59dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="62dp"
                        android:layout_marginBottom="67dp"
                        android:gravity="center"
                        android:text="@string/watering_period"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="TextSizeCheck" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="21dp"
                        android:layout_marginBottom="85dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_watering"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/Watering_period_textView"
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:text="Morning"
                        android:textSize="25sp"
                        tools:ignore="HardcodedText,TextContrastCheck,TextSizeCheck" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                style="@style/CardBackground"
                android:layout_width="175dp"
                android:layout_height="126dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="10dp"
                tools:ignore="TextSizeCheck">

                <RelativeLayout
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <TextView
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="65dp"
                        android:layout_marginBottom="90dp"
                        android:gravity="center"
                        android:text="@string/care_level"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        tools:ignore="RelativeOverlap" />

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="20dp"
                        android:layout_marginBottom="85dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_care_level"
                        tools:ignore="ContentDescription" />

                    <TextView
                        android:id="@+id/care_level_textView"
                        style="@style/TextColor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="30dp"
                        android:textSize="25sp"
                        tools:ignore="TextContrastCheck,TextSizeCheck" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:onClick="expandHumid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            style="@style/CardBackground">
            <LinearLayout
                android:id="@+id/layout_humid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/humidtitle"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="@string/humid"
                    style="@style/TextColor">
                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    android:id="@+id/humidData"
                    style="@style/TextColorData"/>
            </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartHumid"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/buttonsHumid"
                    android:visibility="gone"
                    android:layout_below="@+id/lineChartHumid"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/button_1d_humid"
                        style="@style/MyButton"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/_1d"
                         />
                    <Button
                        android:id="@+id/button_3d_humid"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:text="@string/_3d"
                        style="@style/MyButton"
                        android:layout_marginEnd="10dp"/>
                    <Button
                        android:id="@+id/button_1w_humid"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="1w"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_1m_humid"
                        android:layout_marginEnd="10dp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        style="@style/MyButton"
                        android:text="1m" />
                    <Button
                        android:id="@+id/button_alltime_humid"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        style="@style/MyButton"
                        android:text="ALL" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:onClick="expandTemp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            style="@style/CardBackground">
            <LinearLayout
                android:id="@+id/layout_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true"
                style="@style/ScreenBackground.2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/temptitle"
                    style="@style/TextColor"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="@string/temperature"
                    android:textSize="32sp"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/tempData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    style="@style/TextColorData"/>
                <TextView
                    android:id="@+id/tempUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="°C"
                    android:textSize="32sp"
                    style="@style/TextColorData"/>
            </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartTemp"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:visibility="gone"
                    android:layout_marginTop="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/buttonsTemp"
                    android:visibility="gone"
                    android:layout_below="@+id/lineChartHumid"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/button_1d_temp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="1d"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_3d_temp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="3d"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_1w_temp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="1w"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_1m_temp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="1m"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_alltime_temp"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="ALL"
                        style="@style/MyButton"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:onClick="expandSoil"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="10dp"
            app:contentPadding="20dp"
            style="@style/CardBackground">
            <LinearLayout
                android:id="@+id/layout_soilMoisture"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:animateLayoutChanges="true">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/soiltitle"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:text="@string/soil_moisture"
                    style="@style/TextColor">
                </TextView>
                <TextView
                    android:id="@+id/soilData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="32sp"
                    style="@style/TextColorData"/>

                </LinearLayout>
                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/lineChartSoil"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    android:visibility="gone"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/buttonsSoil"
                    android:visibility="gone"
                    android:layout_below="@+id/lineChartHumid"
                    android:layout_marginTop="8dp"
                    android:gravity="center_horizontal">
                    <Button
                        android:id="@+id/button_1d_soil"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/_1d"
                        style="@style/MyButton"
                        />
                    <Button
                        android:id="@+id/button_3d_soil"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/_3d"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_1w_soil"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/_1w"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_1m_soil"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/_1m"
                        style="@style/MyButton"/>
                    <Button
                        android:id="@+id/button_alltime_soil"
                        android:layout_width="50dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="10dp"
                        android:text="@string/all"
                        style="@style/MyButton"/>
                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

    </ScrollView>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/nav_view"
        app:itemTextAppearance="@style/NavigationViewItemStyle"
        app:menu="@menu/navigation_menu"
        app:itemIconSize="40dp"
        app:itemVerticalPadding="20dp"
        tools:ignore="VisualLintBounds"
        app:itemShapeFillColor="@color/itemnavi"
        app:itemIconTint="@color/itemnavi"

        style="@style/ScreenBackground.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="15dp"
            android:layout_marginBottom="0dp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="40dp"
                    android:paddingStart="35dp"
                    android:textSize="20sp"
                    android:text="Add"
                    android:textStyle="bold"
                    android:id="@+id/add_text"
                    style="@style/TextColor"
                    tools:ignore="HardcodedText" />
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/ScreenBackground.2" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Remove"
                    android:id="@+id/remove_text"
                    android:textStyle="bold"
                    android:paddingStart="40dp"
                    style="@style/TextColor"
                    tools:ignore="HardcodedText,RtlSymmetry"/>
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>