<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/plant_details_layout"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                style="@style/ScreenBackground.4">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/CardBackground.2">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        style="@style/ScreenBackground.4">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="228dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:paddingTop="20dp">

                                <TextView
                                    android:id="@+id/Scientific_details_name"
                                    android:layout_width="205dp"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:autoSizeTextType="uniform"
                                    android:maxLines="2"
                                    android:text="Scientific name"
                                    android:textColor="@color/itemnavi"
                                    android:textSize="20sp"
                                    app:autoSizeMaxTextSize="20sp"
                                    app:autoSizeMinTextSize="10sp"
                                    app:autoSizeStepGranularity="1sp"
                                    tools:ignore="TextContrastCheck" />
                                <TextView
                                    android:layout_width="205dp"
                                    android:layout_height="110dp"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="5dp"
                                    android:text="Common Name"
                                    android:id="@+id/Common_details_name"
                                    android:textColor="@color/itemnavi"
                                    android:textStyle="bold"
                                    android:autoSizeTextType="uniform"
                                    android:maxLines="2"
                                    android:textSize="50sp"
                                    app:autoSizeMinTextSize="12sp"
                                    app:autoSizeMaxTextSize="50sp"
                                    app:autoSizeStepGranularity="2sp" />
                            </LinearLayout>
                            <androidx.cardview.widget.CardView
                                android:layout_width="190dp"
                                android:layout_height="190dp"
                                app:cardBackgroundColor="@android:color/white"
                                app:cardCornerRadius="100dp"
                                app:cardElevation="2dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginTop="-20dp">
                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:id="@+id/ImageBigDetails"
                                    tools:ignore="ContentDescription" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:orientation="vertical"
                            android:layout_marginTop="10dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="110dp"
                                android:orientation="horizontal"

                                >

                                <LinearLayout
                                    android:layout_width="213dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginStart="20dp"
                                        android:layout_marginTop="15dp"
                                        android:id="@+id/Flowering_Season_Icon"
                                        tools:ignore="ContentDescription" />
                                    <LinearLayout
                                        android:layout_width="122dp"
                                        android:layout_height="80dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="@string/season"
                                            android:textColor="@color/titleabc"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            tools:ignore="TextContrastCheck,TextSizeCheck,TooDeepLayout" />

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="30dp"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginTop="2dp"
                                            android:id="@+id/SeasonsDetails"
                                            android:text="Spring"
                                            android:textColor="@color/itemnavi"
                                            android:textStyle="bold"
                                            android:autoSizeTextType="uniform"
                                            android:maxLines="1"
                                            android:textSize="10sp"
                                            app:autoSizeMinTextSize="5sp"
                                            app:autoSizeMaxTextSize="10sp"
                                            app:autoSizeStepGranularity="1sp"
                                            tools:ignore="SmallSp" />
                                    </LinearLayout>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="182dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/cycle_icon"
                                        tools:ignore="ContentDescription,RtlHardcoded" />
                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="@string/cycle"
                                            android:textColor="@color/titleabc"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            tools:ignore="TextSizeCheck,TextContrastCheck" />

                                        <TextView
                                            android:layout_width="112dp"
                                            android:layout_height="32dp"
                                            android:layout_marginStart="10dp"
                                            android:text="Perennial"
                                            android:id="@+id/cycle_details"
                                            android:textColor="@color/itemnavi"
                                            android:textStyle="bold"
                                            android:autoSizeTextType="uniform"
                                            android:maxLines="1"
                                            android:textSize="10sp"
                                            app:autoSizeMinTextSize="5sp"
                                            app:autoSizeMaxTextSize="10sp"
                                            app:autoSizeStepGranularity="1sp"
                                            tools:ignore="SmallSp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:orientation="horizontal">

                                <LinearLayout
                                    android:layout_width="213dp"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_marginTop="15dp"
                                        android:src="@drawable/temperature_icon"
                                        tools:ignore="ContentDescription,RtlHardcoded" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="@string/temperature"
                                            android:textColor="@color/titleabc"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            tools:ignore="TextSizeCheck,TextContrastCheck" />

                                        <TextView
                                            android:layout_width="100dp"
                                            android:layout_height="50dp"
                                            android:layout_marginTop="2dp"
                                            android:layout_marginStart="10dp"
                                            android:id="@+id/temperatureDetails"
                                            android:text="44°F - 64°F"
                                            android:textColor="@color/itemnavi"
                                            android:textStyle="bold"
                                            android:autoSizeTextType="uniform"
                                            android:maxLines="1"
                                            android:textSize="10sp"
                                            app:autoSizeMinTextSize="5sp"
                                            app:autoSizeMaxTextSize="10sp"
                                            app:autoSizeStepGranularity="1sp"
                                            tools:ignore="SmallSp" />
                                    </LinearLayout>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="181dp"
                                    android:layout_height="match_parent"
                                    android:layout_marginStart="5dp">

                                    <ImageView
                                        android:layout_width="50dp"
                                        android:layout_height="50dp"
                                        android:layout_marginLeft="10dp"
                                        android:layout_marginTop="10dp"
                                        android:src="@drawable/humidity"
                                        tools:ignore="ContentDescription,ImageContrastCheck,RtlHardcoded" />

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginStart="10dp"
                                            android:layout_marginTop="10dp"
                                            android:text="@string/humidity"
                                            android:textColor="@color/titleabc"
                                            android:textSize="17sp"
                                            android:textStyle="bold"
                                            tools:ignore="TextSizeCheck,TextContrastCheck" />

                                        <TextView
                                            android:layout_width="112dp"
                                            android:layout_height="32dp"
                                            android:layout_marginStart="10dp"
                                            android:text="High"
                                            android:id="@+id/humidity_details"
                                            android:textColor="@color/itemnavi"
                                            android:textStyle="bold"
                                            android:autoSizeTextType="uniform"
                                            android:maxLines="1"
                                            android:textSize="10sp"
                                            app:autoSizeMinTextSize="5sp"
                                            app:autoSizeMaxTextSize="10sp"
                                            app:autoSizeStepGranularity="1sp"
                                            tools:ignore="SmallSp" />
                                    </LinearLayout>
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="245dp">
                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">                     
                        <TextView
                            android:id="@+id/descriptionDetails"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:maxLines="100"
                            android:paddingStart="7dp"
                            android:paddingTop="5dp"
                            android:scrollbars="vertical"
                            style="@style/ScreenBackground.4"
                            android:textColor="@color/itemnavi"
                            android:textSize="17sp"
                            tools:ignore="RtlSymmetry"/>
                    </androidx.cardview.widget.CardView>
                </androidx.core.widget.NestedScrollView>

                <Button
                    android:id="@+id/details_button"
                    style="Button.White"
                    android:layout_width="230dp"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:textColor="@color/itemnavi"
                    android:textStyle="bold"
                    tools:ignore="SpeakableTextPresentCheck" />
            </LinearLayout>
</FrameLayout>