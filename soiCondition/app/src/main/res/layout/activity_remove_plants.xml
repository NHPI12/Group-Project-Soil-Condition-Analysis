<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RemovePlantsActivity"
    android:orientation="vertical"
    style="@style/ScreenBackground">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        tools:ignore="UselessParent">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/plant_remove_recycle_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:visibility="gone"/>
        <TextView
            android:id="@+id/no_plants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have\nany plants."
            android:textAlignment="center"
            android:layout_marginTop="100dp"
            android:textSize="35sp"
            android:textColor="@color/itemnavi"
            android:visibility="visible"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:id="@+id/add_plant_now_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:text="ADD PLANTS NOW"
            android:textAlignment="center"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="150dp"
            android:layout_below="@id/no_plants_text"
            android:textColor="@color/itemnavi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible" />

        <Button
            android:id="@+id/btnRemovePlants"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/add_button_background"
            android:text="Remove Plants -"
            android:textColor="@color/white"
            android:visibility="visible"
            tools:ignore="TextSizeCheck" />

    </RelativeLayout>
</LinearLayout>