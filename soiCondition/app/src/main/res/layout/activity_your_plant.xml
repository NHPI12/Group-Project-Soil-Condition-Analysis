<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Your_Plant_Activity"
    android:id="@+id/your_plant_nav_layout"
    style="@style/ScreenBackground">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/your_plant_recycle_View"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:visibility="gone"
        style="@style/ScreenBackground.2"/>
        <TextView
            android:id="@+id/no_plants_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You don't have\nany plants."
            android:textAlignment="center"
            android:layout_marginTop="-100dp"
            android:textSize="35sp"
            android:textColor="@color/itemnavi"
            android:visibility="visible"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/add_plant_now_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:clickable="true"
            android:text="ADD PLANTS NOW"
            android:textAlignment="center"
            android:textColor="@color/itemnavi"
            android:textSize="20sp"
            android:textStyle="bold"
            android:visibility="visible"/>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id = "@+id/your_plant_nav"
        app:itemTextAppearance="@style/NavigationViewItemStyle"
        app:menu="@menu/navigation_menu"
        app:itemIconSize="40dp"
        app:itemVerticalPadding="20dp"
        app:itemShapeFillColor="@color/itemnavi"
        app:itemIconTint="@color/itemnavi"
        tools:ignore="VisualLintBounds"
        style="@style/ScreenBackground.2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="bottom"
            android:padding="15dp"
            android:layout_marginBottom="0dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                tools:ignore="UselessParent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="40dp"
                    android:paddingStart="35dp"
                    android:textSize="20sp"
                    android:text="Add"
                    android:id="@+id/add_text"
                    android:textStyle="bold"
                    android:textColor="@color/itemnavi"/>
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    style="@style/CardBackground.2"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="Remove"
                    android:id="@+id/remove_text"
                    android:textStyle="bold"
                    android:paddingStart="40dp"
                    android:textColor="@color/itemnavi"
                    tools:ignore="RtlSymmetry" />
            </LinearLayout>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>