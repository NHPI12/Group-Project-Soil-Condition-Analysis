<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SoiCondition" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lilwhite</item>
        <item name="colorPrimaryVariant">@color/lilwhite</item>
        <item name="colorOnPrimary">@color/lilwhite</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/lilwhite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/lilwhite</item>
        <item name="tabIndicatorColor">@color/white</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/nunito</item>
    </style>


    <style name="ScreenBackground"><item name="android:background">#152A38</item></style>
    <style name="ScreenBackground.2"><item name="android:background">#36597A</item></style>
    <style name="ScreenBackground.3"><item name="drawerLayoutStyle">@color/lilwhite</item></style>
    <style name="CardBackground"><item name="cardBackgroundColor">#36597A</item></style>
    <style name="CardBackground.2"><item name="cardBackgroundColor">#36597A</item></style>
    <style name="TextColor"><item name="android:textColor">@color/white</item></style>
    <style name="ImageChange"><item name="android:src">@color/white</item></style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#556E53</item>
        <item name="colorPrimaryDark">#556E53</item>
        <item name="colorAccent">#556E53</item>
        <item name="fontFamily">@font/nunito</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/leaf</item>
        <item name="colorSwitchThumbNormal">@color/lilwhite</item>
        <item name="android:colorForeground">#42221f1f</item>
    </style>

    <style name="appcin" parent="@android:style/Theme.NoTitleBar.Fullscreen">
        <item name="android:spinnerStyle">@style/spinnerStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem</item>
        <item name="android:spinnerDropDownItemStyle">@style/SpinnerDropDownItem</item>
        <item name="android:background">@color/leaf</item>
    </style>
    <style name="spinnerStyle">
        <item name="android:background">@drawable/lenn</item>
        <item name="android:clickable">true</item>
    </style>
    <style name="SpinnerItem">
        <item name="android:textColor">@color/lilwhite</item>
        <item name="android:maxHeight">10dip</item>
    </style>
    <style name="SpinnerDropDownItem">
        <item name="android:textColor">@color/lilwhite</item>
        <item name="android:background">@color/teal_200</item>
    </style>


</resources>