<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/verybrown</item>
        <item name="colorPrimaryDark">@color/verybrown</item>
        <item name="colorAccent">@color/verybrown</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>
    <style name="NavigationViewItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/itemnavi</item>
    </style>
    <style name="paddingNavigation">
        <item name="android:layout_marginBottom">20dp</item>
    </style>
    <style name="CustomCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/itemnavi</item>
    </style>
    <style name="WhiteCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/lilwhite</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/verybrown</item>
    </style>
    <style name="MyButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button_general</item>
        <item name="android:textColor">@color/lilwhite</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MySpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:textColor">#FF0000</item> <!-- Example: Red text color -->

        <!-- Add more custom attributes here -->
    </style>



</resources>