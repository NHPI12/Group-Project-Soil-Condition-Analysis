<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/verybrown</item>
        <item name="colorPrimaryDark">@color/verybrown</item>
        <item name="colorAccent">@color/verybrown</item>
        <item name="fontFamily">@font/nunito</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:windowBackground">@drawable/preview_screen</item>
    </style>
    <style name="NavigationViewItemStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/verybrown</item>
    </style>
    <style name="paddingNavigation">
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="CustomCheckboxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/verybrown</item>
    </style>
    <style name="WhiteCheckBoxStyle" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:buttonTint">@color/lilwhite</item>
    </style>
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/verybrown</item>
    </style>
</resources>